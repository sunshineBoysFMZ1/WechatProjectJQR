/**my.wxss**/
.container {
    margin: 20rpx;
    border-radius: 12rpx;
    overflow: hidden;
    margin-top: 0;
}

.userinfobox {
    position: relative;
    padding: 40rpx;
    padding-bottom: 120rpx;
    background-color: #03CA83;
}

.userinfo {
    color: #fff;
    font-size: 34rpx;
    overflow: hidden;
}

.userinfo-avatar {
    width: 128rpx;
    height: 128rpx;
    margin-right: 20rpx;
    border-radius: 50%;
    display: block;
    border: solid 2rpx rgba(255, 255, 255, 0.4)
}

.username {
    font-weight: blod;
}

.userid {
    font-size: 28rpx;
    padding-top: 8rpx;
}

.myorder {
    position: relative;
    top: -80rpx;
}

.allorder.cu-bar {
    color: #666;
    font-size: 28rpx;
    min-height: 80rpx;
}

.allorder.cu-bar .cu-title {
    font-size: 32rpx;
    color: #222;
}

.cu-img image {
    width: 48rpx;
    height: 48rpx;
    margin-right: 16rpx;
}

.myorder .cu-list.grid .cu-item text {
    font-size: 26rpx;
    color: #555;
    margin-top: 4rpx;
}

.myorder .cu-list.grid.no-border .cu-item {
    padding: 0;
}

.cu-list.menu>.cu-item.arrow {
    padding-right: 66rpx;
}

.cu-list.menu>.cu-item .action {
    color: #666;
    font-size: 28rpx;
}


.phone {
    background-color: rgba(52, 52, 52, 0.6);
    width: 100%;
    height: 100vh;
    position: fixed;
    top: 0;
    z-index: 999;
}

.iphone {
    width: 70%;
    background: #fff;
    margin: 50% auto;
    height: 300rpx;
    border-radius: 10px;
    text-align: center;
    padding: 30rpx;
}

.iphone image {
    width: 250rpx;
    height: 150rpx;
    border-radius: 50px;
}

.iphone button {
    background-color: #03CA83;
    border-radius: 50rpx;
    line-height: 40rpx;
    padding: 20rpx;
    color: #fff;
    font-size: 28rpx;
    top: 12%;
    width: 80%;
}

.item_message {
    position: absolute;
    top: -9%;
    left: 61%;
    width: 30rpx;
    height: 30rpx;
    background: #03CA83;
    color: #fff;
    border-radius: 50rpx;
}