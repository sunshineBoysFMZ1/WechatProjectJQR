/* pages/coupon/coupon.wxss */
page{background-color:#fff;}
.couponbox{padding:20rpx}
.coupon{border:solid 2rpx #F3D4D4;background-color:#FAEBEB;border-radius:12rpx;margin-bottom:20rpx;}
.money{padding:40rpx 30rpx;border-right:dashed 2rpx #E8BABA;}
.money .price{font-size:60rpx;}
.getbox{padding:0 30rpx}
.tips{background:#ED6F7F;color:#fff;font-size:20rpx;padding:0 4rpx;line-height:30rpx;margin-right:10rpx;}
.intro{padding:20rpx 30rpx;font-size:24rpx;border-top:dashed 2rpx #F3D4D4}
.bg-red{background-color:#FF000B;}
.cu-btn{padding:0 20rpx}



.phone {
    background-color: rgba(52, 52, 52, 0.6);
    width: 100%;
    height: 100vh;
    position: fixed;
    top: 0;
    z-index: 999;
}

.iphone {
    width: 70%;
    background: #fff;
    margin: 50% auto;
    height: 300rpx;
    border-radius: 10px;
    text-align: center;
    padding: 30rpx;
}

.iphone image {
    width: 250rpx;
    height: 150rpx;
    border-radius: 50px;
}

.iphone button {
    background-color: #03CA83;
    border-radius: 50rpx;
    line-height: 40rpx;
    padding: 20rpx;
    color: #fff;
    font-size: 28rpx;
    top: 12%;
    width: 80%;
}

.item_message {
    position: absolute;
    top: -9%;
    left: 61%;
    width: 30rpx;
    height: 30rpx;
    background: #03CA83;
    color: #fff;
    border-radius: 50rpx;
}