/* pages/cart/cart.wxss */
.carttop{height:100rpx;padding:20rpx 30rpx;box-sizing:border-box;position:fixed;top:0;width:100%;z-index:99;}
.carts-list{padding-top:100rpx}
.cuIcon-shopfill{font-size:40rpx;}
.carttop .name{margin-left:12rpx;margin-right:6rpx;font-size:30rpx;color:#333;}
.carttop .action{color:#333;}
.cu-list.menu .cu-item{padding:20rpx;margin:0 20rpx 20rpx;border-radius:12rpx;}
.cu-list.menu .cu-item:after{border:none}
@import "../index/index.wxss";
.cb{transform:scale(0.8,0.8);}
.checked{margin-right:20rpx;}
.goodsimg image{width:160rpx;height:160rpx;border-radius:8rpx;margin-right:20rpx;display:block;}
.text-red,line-red{color:#FF000B;}
checkbox.red[checked],checkbox.red[checked] .wx-checkbox-input{background-color:#FF000B !important;border:#FF000B  !important}
.numbox .num-jian,.numbox .num-input,.numbox .num-jia{width:80rpx;height:60rpx;line-height:60rpx;text-align: center;border:2rpx solid #eee;box-sizing:border-box;}
.numbox .num-input{border-right:0;border-left:0;}
.numbox .num-input input{line-height:60rpx;height:60rpx;}
.numbox .num-jian,.numbox .num-jia{width:60rpx;}
.numbox .num-jian{border-radius:6rpx 0 0 6rpx;}
.numbox .num-jia{border-radius:0 6rpx 6rpx 0;}
.hide{display:none;}
.show{display:block;}
/* 结算 */
.footer-h{height:120rpx;}
.carts-footer{position:fixed;bottom: 0;width: 100%;height:120rpx;background: #fff;border-top:solid 2rpx #ececec;z-index:99;box-sizing:border-box;padding:0 30rpx}
.chkAll,.total{align-items:center;display:flex;}
.total{margin-right:40rpx;}
